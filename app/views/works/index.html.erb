<div class="contents-work-index">
  <div class="title">
    <% if params[:tag] %>
      Works Tagged with <span class="tag"><%= params[:tag] %></span>
    <% end %>
  </div>

  <div class="work-list">
    <% @works.each do |work| %>
      <div class="work">
        <%= link_to "/works/#{work[:id]}" do %>
          <% main_image = work[:images].find { |img| img[:is_main] } %>
          <img src="/images/work/<%= main_image[:image] if main_image %>" alt="<%= work[:title] %>">
          <div class="mask">
            <div class="inside">
              <h2><%= work[:title] %></h2>
              <p class="description"><%= work[:description] %></p>
              <div class="tech-tags">
                <% work[:tech_stacks].each do |tech| %>
                  <span class="tech-tag" data-url="<%= works_path(tag: tech[:name]) %>">
                    <%= tech[:name] %>
                  </span>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
